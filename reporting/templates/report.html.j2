<!-- HTML Report Template for BlackXSS -->
<!-- Author: Fakhar Saleem -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>XSS Scan Report</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    h1 { color: #cc0000; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { padding: 10px; border: 1px solid #ccc; text-align: left; }
    th { background: #eee; }
    .dom { background-color: #ffdddd; }
    .stored { background-color: #ddffdd; }
    .reflected { background-color: #ddddff; }
  </style>
</head>
<body>
  <h1>BlackXSS Vulnerability Report</h1>
  <p><strong>Generated by:</strong> Fakhar Saleem's XSS Tool</p>
  <p><strong>Total Findings:</strong> {{ results | length }}</p>

  <table>
    <thead>
      <tr>
        <th>Type</th>
        <th>URL</th>
        <th>Payload</th>
        <th>Screenshot</th>
      </tr>
    </thead>
    <tbody>
      {% for r in results %}
      <tr class="{{ r.type | lower }}">
        <td>{{ r.type }}</td>
        <td><a href="{{ r.url }}" target="_blank">{{ r.url }}</a></td>
        <td><code>{{ r.payload }}</code></td>
        <td>
          {% if r.screenshot %}
            <a href="{{ r.screenshot }}" target="_blank">View</a>
          {% else %}
            â€”
          {% endif %}
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</body>
</html>
